# NOTE: pm_api_token_id, pm_api_token_secret, and headscale_auth_key
# are automatically loaded from Ansible Vault via tf.sh

# Proxmox connection details  
pm_api_url           = "https://atlas:8006/api2/json"
pm_tls_insecure      = true
proxmox_ssh_username = "root"
proxmox_pve_node_name = "atlas"

# Cluster configuration
cluster_name     = "talos-cluster"
cluster_endpoint = "https://10.5.0.20:6443"
cluster_vip      = "10.5.0.20"

# Network configuration
cluster_node_network         = "10.5.0.0/16"  
cluster_node_network_gateway = "10.5.0.1"
cluster_node_network_first_controller_hostnum = 11
cluster_node_network_first_worker_hostnum     = 21

# Node counts
controller_count = 3
worker_count     = 2

# VM naming
prefix = "talos"

# Versions (will be set by do script)
talos_version      = "1.11.2"
kubernetes_version = "1.32.1"

# Tailscale configuration (auth key loaded from vault via tf.sh)
headscale_login_server = "https://agentydragon.com:8080"